{
  "name": "@busse/monorepo",
  "version": "0.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "bump": "changeset version && pnpm -w update-manifests",
    "update-manifests": "pnpm run meta-updater && pnpm install",
    "meta-updater": "pnpm --filter=@busse/updater build && pnpm --config.use-node-version=16.13.0 exec meta-updater",
    "clean": "pnpm -r --parallel clean",
    "build": "pnpm run -r --reverse --sort build",
    "build:p": "pnpm run -r build --parallel",
    "lint": "eslint --cache --report-unused-disable-directives .",
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install",
    "test": "jest --passWithNoTests",
    "test:changed": "jest --changed-since $(git merge-base HEAD origin/main)",
    "l": "pnpm ls -r --depth -1 --parseable",
    "reset": "pnpm clean && rm -fr node_modules/ && pnpm -r exec rm -fr node_modules && pnpm i && pnpm build",
    "dep:fix": "syncpack fix-mismatches",
    "release": "pnpm build && pnpm -r publish --access=public"
  },
  "private": true,
  "devDependencies": {
    "@busse/create-package": "workspace:*",
    "@busse/eslint-config": "workspace:*",
    "@busse/jest-config": "workspace:*",
    "@busse/tsconfig": "workspace:*",
    "@changesets/cli": "^2.24.3",
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@pnpm/meta-updater": "^0.0.6",
    "@types/node": "^16.11.44",
    "husky": "^8.0.1",
    "jest": "^29.0.1",
    "lint-staged": "^13.0.3",
    "pkg": "^5.7.0",
    "rimraf": "^3.0.2",
    "run-script-webpack-plugin": "^0.1.1",
    "source-map-support": "^0.5.21",
    "syncpack": "^8.2.4",
    "ts-jest": "^28.0.8",
    "ts-loader": "^9.3.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.2",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "webpack-node-externals": "^3.0.0"
  },
  "license": "UNLICENSED",
  "pnpm": {
    "overrides": {
      "colors": "1.4.0"
    },
    "neverBuiltDependencies": [
      "@serialport/bindings"
    ]
  },
  "dependencies": {
    "@busse/homebridge-pluggit": "1.2.2",
    "@nestjs/apollo": "^10.0.16",
    "@nestjs/axios": "^0.0.8",
    "@nestjs/common": "^8.4.7",
    "@nestjs/config": "^2.1.0",
    "@nestjs/core": "^8.4.7",
    "@nestjs/graphql": "^10.0.16",
    "@nestjs/microservices": "^8.4.7",
    "@nestjs/passport": "^8.2.2",
    "@nestjs/platform-express": "^8.4.7",
    "@nestjs/schedule": "^2.0.1",
    "@nestjs/schematics": "^8.0.11",
    "@nestjs/swagger": "^5.2.1",
    "@nestjs/terminus": "^8.1.0",
    "@nestjs/testing": "^8.4.7",
    "@types/express": "^4.17.13",
    "@types/jest": "^29.0.0",
    "@types/react": "^18.0.14",
    "@types/react-dom": "^18.0.5",
    "axios": "^0.27.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "express": "^4.18.1",
    "passport": "^0.6.0",
    "react": "*",
    "react-dom": "*",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.5.5",
    "tsc-watch": "^5.0.3"
  }
}
